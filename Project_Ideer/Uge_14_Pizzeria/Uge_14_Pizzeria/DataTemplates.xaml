<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:Uge_14_Pizzeria"
                    x:Class="Uge_14_Pizzeria.DataTemplates"
                    x:ClassModifier="public">
    <DataTemplate x:Key="UnitClass" DataType="{x:Type local:Unit}">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="10*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <TextBlock Grid.Row="0" Grid.Column="0" Height="23" HorizontalAlignment="Left" Text="{Binding Path=PizzaName, StringFormat=Pizza: {0}}"   VerticalAlignment="Center" />
            <TextBlock Grid.Row="1" Grid.Column="0" Height="23" HorizontalAlignment="Left" Text="{Binding Path=Ingredients, StringFormat=Ingredients: {0}}"    VerticalAlignment="Center" />
            <TextBlock Grid.Row="2" Grid.Column="0" Height="23" HorizontalAlignment="Left" Text="{Binding Path=Price, StringFormat=Price: {0}}"    VerticalAlignment="Center" />
            <StackPanel Grid.Row="3" Grid.Column="0" Orientation="Horizontal">
                <RadioButton Name="SizeSmall" Checked="SizeSmall_Checked" Height="23" GroupName="Size" HorizontalAlignment="Left" VerticalAlignment="Center"> Small </RadioButton>
                <RadioButton Checked="SizeLarge_Checked" Height="23" GroupName="Size" HorizontalAlignment="Left" VerticalAlignment="Center"> Large </RadioButton>
            </StackPanel>
        </Grid>
    </DataTemplate>
</ResourceDictionary>