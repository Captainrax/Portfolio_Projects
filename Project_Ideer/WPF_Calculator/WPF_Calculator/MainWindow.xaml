<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="300">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberA" Width="60" Height="30" Grid.Column="0" Grid.Row="0">w</TextBox>

        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberB" Width="60" Height="30" Grid.Column="1" Grid.Row="0">w</TextBox>

        <Button Width="60" Height="20" Grid.Column="0" Grid.Row="1">Add</Button>

        <Button Width="60" Height="20" Grid.Column="1" Grid.Row="1">Subtract</Button>

        <Button Width="60" Height="20" Grid.Column="2" Grid.Row="1">Multiply</Button>

        <Button Content="Divide" Click="BtnDivide_Click" Grid.Column="3" Grid.Row="1"/>

        <Label VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Right" Grid.Column="2">Results:</Label>

        <Label Name="Result" VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Center" Width="40" Grid.Column="3">00</Label>

    </Grid>
</Window>
