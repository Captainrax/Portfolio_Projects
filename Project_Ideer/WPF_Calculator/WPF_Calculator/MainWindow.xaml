<Window x:Class="WPF_Calculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPF_Calculator"
        mc:Ignorable="d"
        Title="MainWindow" Height="200" Width="350">
    <Grid>

        <Grid.RowDefinitions>
            <RowDefinition Height="120*"/>
            <RowDefinition Height="200*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberA" Width="60" Height="30" Grid.Column="0" Grid.Row="0"></TextBox>

        <TextBox VerticalContentAlignment="Center" TextAlignment="Center" Name="numberB" Width="60" Height="30" Grid.Column="1" Grid.Row="0"></TextBox>

        <Button Content="+" Click="BtnPlus_Click" Width="30" Height="20" Grid.Column="0" Grid.Row="1"/>

        <Button Content="-" Click="BtnMinus_Click" Width="30" Height="20" Grid.Column="1" Grid.Row="1"/>

        <Button Content="*" Click="BtnMultiply_Click" Width="30" Height="20" Grid.Column="2" Grid.Row="1"/>

        <Button Content="/" Click="BtnDivide_Click" Width="30" Height="20" Grid.Column="3" Grid.Row="1"/>

        <Label Content="Results:" VerticalAlignment="Center" FontSize="14" HorizontalAlignment="Right" Grid.Column="2"></Label>

        <Label Name="Result" VerticalAlignment="Center" FontSize="12" HorizontalAlignment="Center" Width="40" Grid.Column="3"></Label>

    </Grid>
</Window>
